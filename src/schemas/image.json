{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Image",
    "category": "component",
    "type": "object",
    "format": "grid",
    "properties": {
      "name": {
        "type": "string",
        "enum": ["image"],
        "options": {
          "hidden": true
        }
      },
      "src": {
        "title": "Image Source",
        "type": "string",
        "format": "url"
      },
      "alt": {
        "title": "Image Alt Text",
        "type": "string"
      },
      "title": {
        "title": "Image Title Text",
        "type": "string"
      }
    },
    "required": ["src"],
    "additionalProperties": false
}
